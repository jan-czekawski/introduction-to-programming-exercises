<% arr = %w(h e l l o \  w o r l d) %>

<%  # sort descending from upper value down to nil
   reverse_sorted_arr = arr.sort { |a, b| b.to_s <=> a.to_s }
%>

<% i = 1 %>
<ul>
  <% reverse_sorted_arr.each do |item| %>
  <li><%= "Item [#{i}] = #{item}" %></li>
  <% i += 1 %>
  <% end %>
</ul>

<% def show_family(some_class, msg)
     if !some_class.nil?
       msg += "<li>#{some_class}</li>"
       show_family(some_class.superclass, msg)
     else
       msg
     end
   end
%>

<%= raw("<ul>#{show_family(self.class, "")}</ul>") %>